    "version": "0.2.0",
    "configurations": [
        {
            "name": "DX12 Debug (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DX12/Out/DX12.exe",
            "symbolSearchPath": "${workspaceFolder}/DX12/Out",
            "logging": {
              "moduleLoad": false,
              "trace": true
            },
            "preLaunchTask": "FASTBuild: DX12_Debug",
            "cwd": "${workspaceRoot}/DX12"
        },
        {
            "name": "DX12 Analyze (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DX12/Out/DX12_Analyze.exe",
