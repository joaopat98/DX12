            "cwd": "${workspaceRoot}/DX12"
        },
        {
            "name": "DX12 Profile (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DX12/Out/DX12_Profile.exe",
            "symbolSearchPath": "${workspaceFolder}/DX12/Out",
            "logging": {
              "moduleLoad": false,
              "trace": true
            },
            "preLaunchTask": "FASTBuild: DX12_Profile",
            "cwd": "${workspaceRoot}/DX12"
        },
        {
            "name": "DX12 Release (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DX12/Out/DX12_Release.exe",
            "symbolSearchPath": "${workspaceFolder}/DX12/Out",
